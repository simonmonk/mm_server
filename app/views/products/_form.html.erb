            <input type="button" value="DO IT" onClick="javascript:deduct(document.getElementById('n').value)"/></p>
        <% @product.product_retailers.each do |pr| %>
            <p><%=pr.retailer.name%> has <%=pr.lookup_stock %> in stock.</p>  
        <% end %>
